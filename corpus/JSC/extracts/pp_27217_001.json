{
  "$schema": "http://json-schema.org/schema#",
  "description": "Student knowledge model based on Bloom taxonomy",
  "properties": {
    "level": {
      "type": {
        "enum": [
          "beginner",
          "middle",
          "expert"
        ]
      }
    },
    "target": {
      "type": {
        "enum": [
          "knowledge",
          "comprehension",
          "application",
          "analysis",
          "synthesis",
          "evaluation"
        ]
      }
    }
  },
  "required": [
    "level",
    "target"
  ],
  "title": "Bloom taxonomy",
  "type": "object"
}
