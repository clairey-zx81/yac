{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "description": "Schema describing properties of an ALICE analysis",
  "properties": {
    "$ana_type": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "_access": {
      "$ref": "https://analysispreservation.cern.ch/schemas/deposits/records/access-v0.0.1.json"
    },
    "_buckets": {
      "$ref": "https://analysispreservation.cern.ch/schemas/deposits/records/buckets-v0.0.1.json"
    },
    "_deposit": {
      "$ref": "https://analysispreservation.cern.ch/schemas/deposits/records/deposit-v0.0.1.json"
    },
    "_experiment": {
      "type": "string"
    },
    "_fetched_from": {
      "type": "string"
    },
    "_files": {
      "$ref": "https://analysispreservation.cern.ch/schemas/deposits/records/file-v0.0.1.json"
    },
    "_user_edited": {
      "type": "boolean"
    },
    "basic_info": {
      "id": "basic_info",
      "properties": {
        "analysis_title": {
          "title": "Analysis Title",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        }
      },
      "title": "Basic Information",
      "type": "object"
    },
    "control_number": {
      "type": "string"
    },
    "general_title": {
      "type": "string"
    },
    "train_analysis": {
      "$ref": "https://analysispreservation.cern.ch/schemas/deposits/records/alice-train-analysis-v0.0.1.json"
    }
  },
  "title": "ALICE Analysis",
  "type": "object"
}
