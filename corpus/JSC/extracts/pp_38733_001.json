{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "b2share": {
    "overwrites": {
      "language_code": {
        "ROOT_SCHEMA": [
          "language"
        ]
      }
    },
    "presentation": {
      "major": [
        "project_name",
        "project_url",
        "language_code",
        "funding_id",
        "owner_org",
        "funder",
        "owner"
      ],
      "plugins": {
        "language_code": "language_chooser"
      }
    }
  },
  "description": "This is the blueprint of the metadata block specific for the Aalto community",
  "properties": {
    "funder": {
      "description": "Funder",
      "title": "Funder",
      "type": "string"
    },
    "funding_id": {
      "description": "Funding ID",
      "title": "Funding ID",
      "type": "string"
    },
    "language_code": {
      "default": "eng",
      "description": "This element can be used to add an ISO language code from ISO-639-3 to uniquely identify the language a document is written in",
      "title": "Language Code",
      "type": "string"
    },
    "owner": {
      "description": "Owner",
      "title": "Owner",
      "type": "string"
    },
    "owner_org": {
      "description": "Owner Organisation",
      "title": "Owner Organisation",
      "type": "string"
    },
    "project_name": {
      "description": "Project Name",
      "title": "Project Name",
      "type": "string"
    },
    "project_url": {
      "description": "Project URL",
      "title": "Project URL",
      "type": "string"
    }
  },
  "required": [
    "language_code"
  ],
  "title": "Aalto Metadata",
  "type": "object"
}
