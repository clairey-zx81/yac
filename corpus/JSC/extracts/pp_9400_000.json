{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "articles": {
      "description": "Display a list of articles.",
      "properties": {
        "resource": {
          "axRole": "inlet",
          "description": "Name of the data resource with articles.",
          "format": "topic",
          "type": "string"
        }
      },
      "required": [
        "resource"
      ],
      "type": "object"
    },
    "selection": {
      "description": "Select an article.",
      "properties": {
        "resource": {
          "axRole": "outlet",
          "description": "Name of the resource for the user selection",
          "format": "topic",
          "type": "string"
        }
      },
      "required": [
        "resource"
      ],
      "type": "object"
    }
  },
  "required": [
    "articles",
    "selection"
  ],
  "type": "object"
}
