{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "additionalProperties": false,
  "properties": {
    "count": {
      "$id": "/properties/count",
      "default": 5,
      "title": "Packet count",
      "type": "integer"
    },
    "destination_ip": {
      "$id": "/properties/destination_ip",
      "default": "",
      "title": "Destination (device loopback IP)",
      "type": "string"
    },
    "source_ip": {
      "$id": "/properties/source_ip",
      "default": "",
      "title": "Source (device loopback IP)",
      "type": "string"
    },
    "vni": {
      "$id": "/properties/vni",
      "default": 100,
      "title": "VNI",
      "type": "integer"
    }
  },
  "required": [
    "source_ip",
    "destination_ip",
    "count",
    "vni"
  ],
  "type": "object"
}
