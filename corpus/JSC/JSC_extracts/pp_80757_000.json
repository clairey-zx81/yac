{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Automatically taken from GLANCE, based on GLANCE ID",
  "id": "glance_info",
  "properties": {
    "creation_date": {
      "title": "Creation date",
      "type": "string"
    },
    "full_title": {
      "title": "Full Title",
      "type": "string"
    },
    "gitlab_group": {
      "properties": {
        "id": {
          "title": "ID",
          "type": "string"
        },
        "projects": {
          "items": {
            "properties": {
              "id": {
                "title": "ID",
                "type": "string"
              },
              "url": {
                "title": "URL",
                "type": "string"
              }
            },
            "title": "Project",
            "type": "object"
          },
          "title": "Projects",
          "type": "array"
        }
      },
      "title": "Gitlab Group",
      "type": "object"
    },
    "id": {
      "title": "GLANCE ID",
      "type": "string"
    },
    "phase_0": {
      "items": {
        "properties": {
          "dataset_used": {
            "title": "Dataset Used",
            "type": "string"
          },
          "id": {
            "title": "ID",
            "type": "string"
          },
          "main_physics_aim": {
            "title": "Main Physics Aim",
            "type": "string"
          },
          "methods": {
            "title": "Methods",
            "type": "string"
          },
          "model_tested": {
            "title": "Model Tested",
            "type": "string"
          }
        },
        "type": "object"
      },
      "title": "Phase 0",
      "type": "array"
    },
    "pub_short_title": {
      "title": "Publication title",
      "type": "string"
    },
    "ref_code": {
      "title": "Ref Code",
      "type": "string"
    },
    "short_title": {
      "title": "Short Title",
      "type": "string"
    },
    "status": {
      "title": "Status",
      "type": "string"
    }
  },
  "title": "Information from GLANCE database",
  "type": "object"
}
