{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "article": {
      "properties": {
        "resource": {
          "axRole": "inlet",
          "description": "resource representing an article to display",
          "format": "topic",
          "type": "string"
        }
      },
      "required": [
        "resource"
      ],
      "type": "object"
    },
    "confirmation": {
      "properties": {
        "action": {
          "axRole": "outlet",
          "description": "action to request adding the selected article to cart",
          "format": "topic",
          "type": "string"
        }
      },
      "required": [
        "action"
      ],
      "type": "object"
    }
  },
  "required": [
    "article"
  ],
  "type": "object"
}
