{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "button": {
      "properties": {
        "action": {
          "format": "topic",
          "type": "string"
        },
        "label": {
          "default": "hit me",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "action"
      ],
      "type": "object"
    },
    "headline": {
      "properties": {
        "enabled": {
          "default": false,
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}
