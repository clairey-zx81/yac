{
	"type": "object",
	"properties": {
		"first_name": {
			"type": "string",
			"pattern": "^\\S{1,128}$"
		},
		"email": {
			"type": "string",
			"pattern": ".+@.+\\..+"
		},
		"last_name": {
			"type": "string",
			"pattern": "^\\S{0,128}$"
		},
		"password": {
			"type": "string",
			"pattern": ".{4,256}$"
		},
		"picture": {
			"type": "string",
			"pattern": "((?:https?\\:\\/\\/|www\\.)(?:[-a-z0-9]+\\.)*[-a-z0-9]+.*)"
		}
	},
	"required": ["first_name", "email", "last_name"]
}
