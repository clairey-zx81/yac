        },
        "namedCrs": {
            "properties": {
                "type": {
                    "enum": [
                        "name"
                    ]
                },
                "properties": {
                    "required": [
                        "name"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "linkedObject": {
            "type": "object",
