                        }
                    }
                },
                {
                    "title": "LineString",
                    "properties": {
                        "type": {
                            "enum": [
                                "LineString"
                            ]
                        },
                        "coordinates": {
                            "$ref": "#/definitions/lineString"
                        }
                    }
                },
                {
                    "title": "MultiLineString",
                    "properties": {
                        "type": {
                            "enum": [
