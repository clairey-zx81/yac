        "halteort@sbb_records": {
            "properties": {
                "fields": {
                    "type": "object",
                    "properties": {
                        "linie": {
                            "type": "integer",
                            "title": "Line",
                            "description": "Designation of the line, matches the official timetable no."
                        },
                        "km": {
                            "type": "number",
                            "title": "KM",
                            "description": "Kilometrage of the line. Congruent with the markings along the line"
                        },
